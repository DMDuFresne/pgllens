# ProveIT MES MCP Server Configuration
# Copy this file to .env and update values for your environment

# =============================================================================
# Server Configuration
# =============================================================================

# HTTP port for the MCP server (default: 3000)
MCP_PORT=3000

# =============================================================================
# Database Configuration
# =============================================================================

# Database connection URL (required)
# Format: postgresql://user:password@host:port/database
# For local testing against Docker stack:
DATABASE_URL=postgresql://mcp_readonly:mcp_readonly_password@localhost:5433/proveit-mes

# For running inside Docker (use internal hostname):
# DATABASE_URL=postgresql://mcp_readonly:mcp_readonly_password@mes-pgbouncer:5432/proveit-mes

# Schema cache refresh interval in milliseconds (optional)
# Default: 3600000 (1 hour)
SCHEMA_REFRESH_INTERVAL_MS=3600000

# Query timeout in milliseconds (optional)
# Default: 30000 (30 seconds)
QUERY_TIMEOUT_MS=30000

# Maximum rows returned from queries (optional)
# Default: 1000
MAX_ROWS=1000

# Schemas to expose (comma-separated, optional)
# Default: mes_core,mes_audit,mes_custom
EXPOSED_SCHEMAS=mes_core,mes_audit,mes_custom
